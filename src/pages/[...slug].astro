---
import "selo-components/common.css"; // has to be above site-specific css

import "@/global.css";
import { type CollectionEntry, getCollection, render } from "astro:content";
import { Layout } from "selo-components";

export const getStaticPaths = async () =>
  (await getCollection("content")).map((post) => ({
    params: { slug: post.id },
    props: post,
  }));

const post: CollectionEntry<"content"> = Astro.props;
const { Content } = await render(post);
---

<Layout
  useNavbar
  useLanguageToggle
  title={post.data.title}
  description={post.data.description}
  goatcounter="pona-la.goatcounter.com"
  github="https://github.com/pona-la/pona-la"
>
  <Content />
</Layout>
