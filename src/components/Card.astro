---
import fs from "fs";
import Tok from "./Tok.astro";
import Eng from "./Eng.astro";

interface Props {
  url: string;
}
const { url } = Astro.props;

const sites: Record<string, Record<string, string>> = JSON.parse(
  fs.readFileSync("content/sites.json", "utf-8"),
);
const { img, title_eng, title_tok, desc_eng, desc_tok } = Object.keys(
  sites,
).includes(url)
  ? sites[url]
  : { img: "", title_eng: "", title_tok: "", desc_eng: "", desc_tok: "" };
---

<style>
  .card {
    padding: 5px 15px;
    display: grid;
    grid-template-columns: 60px 1fr;
    grid-gap: 15px;
    align-items: center;
  }
  /*.card:nth-child(odd) {
    background-color: var(--bg-1);
  }*/
  .card:hover {
    background-color: var(--bg-1);
  }
  .title {
    font-weight: bold;
  }
  a:hover .title {
    text-decoration: underline dotted;
  }
  img {
    width: 100%;
    border-radius: 15px;
  }
  a {
    font-weight: inherit;
    text-decoration: inherit;
    color: inherit;
  }
  a:active,
  a:hover {
    color: unset !important;
  }
</style>

<a class="card" href={`${url}`}>
  <div class="sp">
    {img && <img src={img} />}
  </div>
  <div>
    <span class="title">
      <Eng>{title_eng}</Eng>
      <Tok>{title_tok}</Tok>
    </span>
    <br />
    <Eng>{desc_eng}</Eng>
    <Tok>{desc_tok}</Tok>
  </div>
</a>
